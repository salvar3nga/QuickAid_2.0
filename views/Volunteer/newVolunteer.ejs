            <label class="form-check-label" for="has-car" name="volunteer[hasCar]">
            Has a car
            </label>
        </div>
        </div> -->
        <div class="col-12 d-flex justify-content-end">
            <a class="btn btn-sm btn-secondary me-4" href="/volunteers"><%= t('cancel') %> </a>
            <button class="btn btn-sm btn-primary"><%= t('add') %> </button>
        </div>
  </form>
